<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BCAInternship" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/artifika</item>
    </style>

    <style name="Theme.BCAInternship" parent="Base.Theme.BCAInternship" />

    <style name="text_white_18_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white80_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_transparent_80</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="edit_white_14" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white_transparent_80</item>
        <item name="android:textColorHint">@color/white_transparent_70</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>

    <style name="button_18_bold" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>